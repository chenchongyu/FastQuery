<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="net.runningcode.utils.CommonUtil"/>
        <import type="android.view.View" />

        <variable name="address" type="String"/>
        <variable name="birthday" type="String"/>
        <variable name="constellation" type="String"/>
        <variable name="zodiac" type="String"/>
    </data>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30px"
            android:paddingLeft="30px"
            >
            <EditText
                android:id="@+id/v_id_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="64px"
                android:paddingLeft="10px"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:inputType="textVisiblePassword"
                android:hint="请输入身份证号码"
                android:imeOptions="actionSearch"
                />
            <ImageView android:id="@+id/v_clear"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5px"
                       android:layout_marginRight="24px"
                       android:src="@drawable/icon_clear"
                       android:layout_toLeftOf="@+id/view"
                       android:visibility="gone"
                />
            <View
                android:id="@+id/view"
                android:layout_width="1px"
                android:layout_height="30px"
                android:layout_marginRight="24px"
                android:layout_marginTop="5px"
                android:layout_toLeftOf="@+id/v_query"
                android:background="#cdccd1"
                android:visibility="gone"/>

            <ImageView android:id="@+id/v_query"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_alignParentTop="true"
                       android:layout_marginRight="30px"
                       android:layout_marginTop="5px"
                       android:src="@drawable/icon_query_green"/>
            <RelativeLayout android:id="@+id/v_result_panel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/v_id_no"
                            android:paddingTop="50px"
                            android:paddingBottom="50px"
                            android:paddingLeft="20px"
                            android:paddingRight="60px"
                            android:orientation="horizontal"
                            android:background="@color/btn_gray"
                            android:visibility="@{address != null ? View.VISIBLE : View.GONE}"
            >
                <ImageView android:id="@+id/v_icon"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentLeft="true"
                           android:src="@drawable/icon_unicom"
                    />
                <TextView
                    android:id="@+id/v_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/v_icon"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:textColor="@color/black"
                    android:text="@{birthday}"
                    tools:text="1111111111"
                    />
                <TextView
                    android:id="@+id/v_constellation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/v_icon"
                    android:layout_below="@id/v_birthday"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:textColor="@color/black"
                    android:text="@{constellation}"
                    tools:text="天蝎座"
                    />
                <TextView
                    android:id="@+id/v_zodiac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/v_constellation"
                    android:layout_below="@id/v_birthday"
                    android:textSize="40px"
                    android:paddingLeft="100px"
                    android:textColor="@color/black"
                    android:text="@{zodiac}"
                    tools:text="生肖：牛"
                    />
                <TextView
                    android:id="@+id/v_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/v_icon"
                    android:layout_below="@id/v_zodiac"
                    android:textSize="50px"
                    android:paddingLeft="30px"
                    android:paddingTop="30px"
                    android:textColor="@color/black"
                    android:text="@{address}"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>
