<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="20dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText android:id="@+id/v_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginRight="5dp"
            android:hint="输入快递单号"
            android:text="350464466872"
            />
        <Button android:id="@+id/v_query"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@color/btn_success"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:text="查询"
            android:textSize="18sp"
            />
        <ImageView android:id="@+id/v_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_scan"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView android:id="@+id/v_logo"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView android:id="@+id/v_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/v_infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        />
</LinearLayout>
