<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="20dp"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/v_weather_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_sunshine"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <TextView android:id="@+id/v_weather_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="晴"
            android:textSize="20sp"/>
        <TextView android:id="@+id/v_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="20~30"/>
        <TextView android:id="@+id/v_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/v_temperature"
            android:textStyle="bold"
            android:text="pm2.5:100"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:id="@+id/v_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="北京"/>

        <TextView android:id="@+id/v_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="04/01 星期五"/>
    </LinearLayout>

    <GridView android:id="@+id/v_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></GridView>

</LinearLayout>
