<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    >

    <net.runningcode.view.SearchView
        android:id="@+id/v_searchview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="请输入手机号码"
        app:input_type="number"
        />

    <RelativeLayout
        android:id="@+id/v_result_panel"
        style="@style/ResultPanel"
        android:layout_below="@id/v_searchview">

        <ImageView
            android:id="@+id/v_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/v_phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/v_icon"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/v_phone_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_phone_no"
            android:layout_toRightOf="@id/v_icon"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/v_phone_zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_phone_result"
            android:layout_toRightOf="@id/v_icon"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
    </RelativeLayout>
</RelativeLayout>

