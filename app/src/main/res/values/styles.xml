    <style name="AppTheme" parent="AppThemeBase"/>

    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarHeight">30px</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--<item name="android:fitsSystemWindows">true</item>-->
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="LotteryRadio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">10px</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/btn_success</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">35px</item>
    </style>

    <style name="StyleSalaryInfoTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:padding">28px</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">26px</item>
    </style>

    <style name="StyleSalaryInfoInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">28px</item>
        <item name="android:layout_toEndOf">@+id/v_salary_lable</item>
        <item name="android:layout_toRightOf">@+id/v_salary_lable</item>
    </style>
</resources>
